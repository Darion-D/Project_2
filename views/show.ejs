<!DOCTYPE html>
<html lang="en">

<!-- head -->
<%- include( 'partials/head.ejs' )  %>

<body>
    <%- include( 'partials/nav.ejs' )  %>

    <section>
        <div>
            <h2 class="title">Video: <%=video.name%>
            </h2>

        </div>
    </section>

    <main class="container">
        <div>
            
            <div>
                <a href="/videos/<%=id%>/edit">Edit Videos</a>
            </div>
          <div>
            <iframe width="420" height="315"
src="<%=video.url%>">
</iframe>
          </div>
            <div>
                <p class="control">
                    <form action="/videos/<%= id %>?_method=DELETE" method="POST">
                            <input class="button is-danger" type="submit" value="Delete Videos"/>                    
                    </form>
                </p>

            </div>
        </div>
    </main>

</body>

</html>