<!DOCTYPE html>
<html lang="en">
    <%- include("partials/head", {page: "edit"}) %>

    <body>
        <%- include("partials/nav") %>

    
<form action="/videos/<%= id%>?_method=PUT" method="POST">
    <label>Video URL:</label>
    <div>
        <input
          class="input"
          type="text"
          placeholder="video url"
          name="url"
          value="<%= video.url %> "
          />
    </div>
<div>
    <label>Video Title:</label>
    <div class="control">
        <input
          class="input"
          type="text"
          placeholder="video title"
          name="title"
          value="<%= video.title %> "
          />
    </div>
    <label>Uploader:</label>
    <div class="control">
        <input
          class="input"
          type="text"
          placeholder="uploader"
          name="uploader"
          value="<%= video.uploader %> "
          />
    </div>
    <label>Video Description:</label>
    <div class="control">
        <input
          class="input"
          type="text"
          placeholder="video description"
          name="description"
          value="<%= video.description %> "
          />
    </div>
</div>

    <div>
  <input type="submit" value="Edit Video">      
    </div>
</form>
</body>
</html>